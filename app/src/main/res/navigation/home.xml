        android:name="com.uz.ui.fragments.search.SearchResultsFragment"
        android:label="SearchResultsFragment" />
    <fragment
        android:id="@+id/businessDetailsFragment"
        android:name="com.uz.ui.fragments.details.BusinessDetailsFragment"
        android:label="BusinessDetailsFragment" />
    <fragment
        android:id="@+id/businessProductsFragment"
        android:name="com.uz.ui.fragments.product.BusinessProductsFragment"
        android:label="BusinessProductsFragment" />
    <fragment
        android:id="@+id/viewProductFragment"
        android:name="com.uz.ui.fragments.product.ViewProductFragment"
        android:label="ViewProductFragment" />
